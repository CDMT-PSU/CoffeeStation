<Window x:Class="CoffeeStation.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeStation"
        mc:Ignorable="d"
        Title="Signup"
        Width="300"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <StackPanel Margin="0,0,0,5">
            <Label Content="Username (?)" ToolTip="Username length must be 4 to 15 characters."/>
            <TextBox x:Name="usernameTextBox" MaxLength="15"/>
            <Label Content="Password (?)" ToolTip="Password length must be 4 to 15 characters."/>
            <PasswordBox x:Name="passwordBox" MaxLength="15"/>
            <Label Content="Repeat password"/>
            <PasswordBox x:Name="passwordConfirmationBox" MaxLength="15"/>
        </StackPanel>
        <StackPanel Margin="0,0,0,5">
            <Button Content="Sign Up" Click="SignUp"/>
        </StackPanel>
        <StackPanel>
            <Button Content="I already have an account" Click="ShowLoginWindow"/>
        </StackPanel>
    </StackPanel>
</Window>
